# Django основні налаштування
# ВАЖЛИВО: Згенеруйте новий SECRET_KEY для продакшену!
# Команда: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-generate-new-one-for-production

# Режим розробки (встановіть False для продакшену)
DEBUG=True

# Дозволені хости (через кому)
ALLOWED_HOSTS=localhost,127.0.0.1

# База даних PostgreSQL
DB_NAME=inventory_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_HOST=localhost
DB_PORT=5432

# Redis налаштування (для кешування та Celery)
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email налаштування
# Для розробки залиште console.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Для продакшену змініть на: django.core.mail.backends.smtp.EmailBackend

# SMTP налаштування (тільки для продакшену)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password
DEFAULT_FROM_EMAIL=inventory@yourcompany.com

# Налаштування агента збору даних
API_URL=http://127.0.0.1:8000/api/equipment/
TOKEN_URL=http://127.0.0.1:8000/api/token/
REFRESH_URL=http://127.0.0.1:8000/api/token/refresh/
ANALYTICS_URL=http://127.0.0.1:8000/api/analytics/
USER=your_agent_username
PASSWORD=your_agent_password
COLLECTION_INTERVAL=3600
COMPUTER_LOCATION=Main Office

# Безпека (для продакшену встановіть True)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Логування
LOG_LEVEL=INFO

# Sentry для моніторингу помилок (додатково)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CORS налаштування (додайте ваші домени для продакшену)
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com